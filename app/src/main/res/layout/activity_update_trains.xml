<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_trains_Activity">

    <EditText
        android:id="@+id/update_trainName_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Enter train name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_numberOfCoaches_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number of Coaches"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_trainName_edt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/update_trainType_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter train Type"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_numberOfCoaches_edt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/update_arrivalTime_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter arrival time"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_trainType_edt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/update_departTime_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Depart time"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_arrivalTime_edt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/update_submit_btn"
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_departTime_edt" />



</androidx.constraintlayout.widget.ConstraintLayout>